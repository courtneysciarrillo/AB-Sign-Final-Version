<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Baloo" rel="stylesheet">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body style="background-image: url('../../img/family.jpg');background-size:cover;background-position:center;">
    @{
        ViewBag.Title = "Home Page";
        Layout = null;
    }

    <div class="menu-container">
<div class="hex-wrapper">

            <div class="hex-row">
                <div class="hex-row shift">
                    <a href="@Url.Action("Register", "Account")">
                        <div class="hexagon" id="nav-register">
                            Register
                            <div class="face1"></div>
                            <div class="face2"></div>
                        </div>
                    </a>
                </div>

                <a href="@Url.Action("Login", "Account")">
                    <div class="hexagon" id="nav-login">
                        Login
                        <div class="face1"></div>
                        <div class="face2"></div>
                    </div>
                </a>
            </div>
            <div class="hex-row">
                <a href="@Url.Action("Index", "Images")">
                    <div class="hexagon" id="nav-flashcards">
                        Study
                        <div class="face1"></div>
                        <div class="face2"></div>
                    </div>
                </a>
                <div class="hexagon" id="nav-blank">
                    <img src="~/img/absign-logo.png" style="width:100%;" />
                    <div class="face1"></div>
                    <div class="face2"></div>
                </div>
                    <a href="@Url.Action("Index", "Signs")">
                        <div class="hexagon" id="nav-library">
                            Learn
                            <div class="face1"></div>
                            <div class="face2"></div>
                        </div>
                    </a>
            </div>
            <div class="hex-row shift">
                <a href="@Url.Action("quizview", "testscores")">
                    <div class="hexagon" id="nav-quiz">
                        Quiz
                        <div class="face1"></div>
                        <div class="face2"></div>
                    </div>
                </a>
                <a href="@Url.Action("Index", "TestScores")">
                    <div class="hexagon" id="nav-progress">
                        Progress
                        <div class="face1"></div>
                        <div class="face2"></div>
                    </div>
                </a>
            </div>
    </div>
</div>

</body>
</html>